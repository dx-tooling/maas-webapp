{% extends '@common.presentation/base_fullcontent.html.twig' %}

{% block body %}
    <div class="relative">
        <!-- Hero Section -->
        <div class="relative overflow-hidden bg-gradient-to-b from-blue-50 to-white dark:from-dark-900 dark:to-dark-800 py-24 sm:py-32">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl text-center">
                    <h1 class="etfswui-h1-gradient">
                        <span class="etfswui-h1-gradient-span">Playwright MCP Cloud</span>
                    </h1>
                    <p class="mt-6 text-lg leading-8 text-dark-600 dark:text-dark-300">
                        Deploy Playwright MCP Servers in the cloud with zero setup. Enable AI agents to control real browsers with full visual feedback through VNC.
                    </p>
                    <div class="mt-10 flex items-center justify-center gap-x-6">
                        <a href="{{ path('mcp_instances.presentation.dashboard') }}" class="etfswui-link-as-button-default">
                            Deploy MCP Server
                        </a>
                        <a href="{{ path('website_content.presentation.about') }}" class="etfswui-link-secondary">
                            Learn more <span class="etfswui-h1-gradient-span inline-block ml-1">→</span>
                        </a>
                    </div>
                    <p class="mt-2 text-sm text-dark-500 dark:text-dark-400">Launching an MCP Server takes less than 10 seconds.</p>
                </div>
            </div>
        </div>

        <!-- Video Demo Section -->
        <div class="py-24 sm:py-32 bg-dark-50 dark:bg-dark-900/50">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-4xl">
                    <div class="aspect-video w-full overflow-hidden rounded-lg shadow-2xl ring-1 ring-dark-900/10 dark:ring-dark-100/10">
                        <video 
                            class="w-full h-full object-cover"
                            autoplay
                            muted
                            playsinline
                            controls
                            poster="https://develop-build-deploy.com/playwright-mcp-cloud-assets/2025-06-12-playwright-mcp-cloud-landingpage-demo-video.poster.jpg"
                        >
                            <source 
                                src="https://develop-build-deploy.com/playwright-mcp-cloud-assets/2025-06-12-playwright-mcp-cloud-landingpage-demo-video.mp4" 
                                type="video/mp4"
                            >
                            Your browser does not support the video tag.
                        </video>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div id="features" class="py-24 sm:py-32">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl text-center">
                    <h2 class="etfswui-h2">AI-Powered Browser Control</h2>
                    <p class="mt-6 text-lg leading-8 text-dark-600 dark:text-dark-300">
                        Our cloud-based <a href="https://playwright.dev/" target="_blank">Playwright</a> MCP Server provides the perfect tool for AI agents to interact with real browsers, enabling realistic web automation and interaction.
                    </p>
                </div>
                <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
                    <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
                        <div class="etfswui-card">
                            <div class="etfswui-card-content">
                                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-500 dark:bg-blue-600">
                                    <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                                    </svg>
                                </div>
                                <h3 class="mt-4 text-lg font-semibold leading-8 text-dark-900 dark:text-dark-100">Real Browser Control</h3>
                                <p class="mt-2 text-base leading-7 text-dark-600 dark:text-dark-300">
                                    Deploy a full <a href="https://playwright.dev/" target="_blank">Playwright</a> MCP Server instance backed by a real Chrome browser.
                                    Perfect for AI agents (e.g. in n8n) that need to interact with web applications naturally.
                                </p>
                            </div>
                        </div>

                        <div class="etfswui-card">
                            <div class="etfswui-card-content">
                                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-500 dark:bg-blue-600">
                                    <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 15.75V18m-7.5-6.75h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25V13.5zm0 2.25h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25V18zm2.498-6.75h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007V13.5zm0 2.25h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007V18zm2.504-6.75h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V13.5zm0 2.25h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V18zm2.498-6.75h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V13.5zM8.25 6h7.5v2.25h-7.5V6zM12 2.25c-1.892 0-3.758.11-5.593.322C5.307 2.7 4.5 3.65 4.5 4.757V19.5a2.25 2.25 0 002.25 2.25h10.5a2.25 2.25 0 002.25-2.25V4.757c0-1.108-.806-2.057-1.907-2.185A48.507 48.507 0 0012 2.25z" />
                                    </svg>
                                </div>
                                <h3 class="mt-4 text-lg font-semibold leading-8 text-dark-900 dark:text-dark-100">Visual Feedback</h3>
                                <p class="mt-2 text-base leading-7 text-dark-600 dark:text-dark-300">
                                    Monitor AI agent interactions in real-time through the integrated VNC client, right in your own browser.
                                    See exactly how your AI is interacting with web applications.
                                </p>
                            </div>
                        </div>

                        <div class="etfswui-card">
                            <div class="etfswui-card-content">
                                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-500 dark:bg-blue-600">
                                    <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                                    </svg>
                                </div>
                                <h3 class="mt-4 text-lg font-semibold leading-8 text-dark-900 dark:text-dark-100">Secure & Isolated</h3>
                                <p class="mt-2 text-base leading-7 text-dark-600 dark:text-dark-300">
                                    Each MCP Server runs in its own isolated environment with secure access through bearer token authentication.
                                </p>
                            </div>
                        </div>
                    </dl>
                </div>
            </div>
        </div>

        <!-- How It Works Section -->
        <div class="bg-dark-50 dark:bg-dark-900/50 py-24 sm:py-32">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl text-center">
                    <h2 class="etfswui-h2">How It Works</h2>
                    <p class="mt-6 text-lg leading-8 text-dark-600 dark:text-dark-300">
                        Get your AI agent browsing the web in three simple steps
                    </p>
                </div>
                <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
                    <div class="grid grid-cols-1 gap-y-8 gap-x-6 sm:grid-cols-2 lg:grid-cols-3">
                        <div class="etfswui-card">
                            <div class="etfswui-card-content">
                                <div class="flex items-center gap-x-4">
                                    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-500 dark:bg-blue-600">
                                        <span class="text-lg font-semibold text-white">1</span>
                                    </div>
                                    <h3 class="text-lg font-semibold leading-8 text-dark-900 dark:text-dark-100">Deploy MCP Server</h3>
                                </div>
                                <p class="mt-4 text-base leading-7 text-dark-600 dark:text-dark-300">
                                    Launch a new MCP Server instance with a single click. We'll handle all the setup and browser installation.
                                </p>
                            </div>
                        </div>

                        <div class="etfswui-card">
                            <div class="etfswui-card-content">
                                <div class="flex items-center gap-x-4">
                                    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-500 dark:bg-blue-600">
                                        <span class="text-lg font-semibold text-white">2</span>
                                    </div>
                                    <h3 class="text-lg font-semibold leading-8 text-dark-900 dark:text-dark-100">Connect Your AI</h3>
                                </div>
                                <p class="mt-4 text-base leading-7 text-dark-600 dark:text-dark-300">
                                    Use the provided endpoint and authentication token to connect your AI agent to the MCP Server.
                                </p>
                            </div>
                        </div>

                        <div class="etfswui-card">
                            <div class="etfswui-card-content">
                                <div class="flex items-center gap-x-4">
                                    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-500 dark:bg-blue-600">
                                        <span class="text-lg font-semibold text-white">3</span>
                                    </div>
                                    <h3 class="text-lg font-semibold leading-8 text-dark-900 dark:text-dark-100">Monitor & Debug</h3>
                                </div>
                                <p class="mt-4 text-base leading-7 text-dark-600 dark:text-dark-300">
                                    Watch your AI agent interact with web applications through the VNC viewer and debug any issues in real-time.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- CTA Section -->
        <div class="bg-white dark:bg-dark-800 py-24 sm:py-32">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl text-center">
                    <h2 class="etfswui-h2">Ready to empower your AI?</h2>
                    <p class="mt-6 text-lg leading-8 text-dark-600 dark:text-dark-300">
                        Join the growing number of AI developers who are using Playwright MCP Cloud to enable realistic web interaction for their agents.
                    </p>
                    <div class="mt-10 flex items-center justify-center gap-x-6">
                        <a href="{{ path('mcp_instances.presentation.dashboard') }}" class="etfswui-link-as-button-default">
                            Deploy Your First MCP Server
                        </a>
                        <a href="{{ path('website_content.presentation.about') }}" class="etfswui-link-secondary">
                            Learn more <span class="etfswui-h1-gradient-span inline-block ml-1">→</span>
                        </a>
                    </div>
                    <p class="mt-2 text-sm text-dark-500 dark:text-dark-400">Launching an MCP Server takes less than 10 seconds.</p>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
