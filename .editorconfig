# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# PHP files
[*.php]
indent_style = space
indent_size = 4
max_line_length = 120

# TypeScript/JavaScript files
[*.{ts,js,mjs}]
indent_style = space
indent_size = 4
max_line_length = 120

# JSON files
[*.json]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 4

# Configuration files
[*.{neon,neon.dist,dist.php}]
indent_style = space
indent_size = 4

# CSS files
[*.css]
indent_style = space
indent_size = 4
max_line_length = 120

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4
max_line_length = 120
